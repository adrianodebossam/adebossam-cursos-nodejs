<html>
<link rel="stylesheet" href="/css/bootstrap.css">
<link rel="stylesheet" href="/css/style.css">
	<body class="container">
		<div class='erros'>
			<% if(errosValidacao){ %>
				<ul>
					<% for(var i=0;i<errosValidacao.length;i++){ %>
						<li> 
						 <%= errosValidacao[i].param %> - <%= errosValidacao[i].msg %>
						</li>
					<% } %>		
				</ul>
			<% } %>
		</div>
		<form action="/produtos" method="post" >
			<div>
				<label for="titulo" class="label-control text-primary"> Título </label>
				<input type="text" id="titulo" name="titulo" value ="<%= produto.titulo %>" placeholder="Coloque o título." class="form-control" />
			</div>
			<div>
				<label for="preco" class="label-control text-primary"> Preço </label>
				<input type="text" id="preco" name="preco" value ="<%= produto.preco %> " placeholder="Coloque o preco." class="form-control" />
			</div>
			<div>
				<label for="descricao" class="label-control text-primary"> Descrição </label>
				<textarea cols="20" rows="10" id="descricao" name="descricao" value = "<% produto.descricao %>" placeholder="Descreva o livro." class="form-control" > </textarea>
			</div>
			<br>
			<input type="submit" value="Gravar" class="btn btn-primary btn-block" />
		</form>
	</body>	
</html>		